{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
	  "lib": [
      "DOM",
      "DOM.Iterable",
      "ES5",
      "ES6",
      "ES7",
      "ESNext",
    ],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": [
    "**/*.ts"
,   "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}